@model TAApplicationPS4.Models.TimeSlots
@using TAApplicationPS4.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;

@section Scripts{

    <!-- PIXI Cloud flare and JQuery-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/5.1.5/pixi.js"></script>

    <!-- JavaScript -->
    <script src="~/js/availability/availability.js"></script>
    <script src="~/js/availability/setup.js"></script>
    <script src="~/js/availability/day.js"></script>

}



<body onload="retrieveData('@Model.Monday', '@Model.Tuesday', '@Model.Wednesday', '@Model.Thursday', '@Model.Friday')">
    <h2>Availability for @ViewBag.name </h2>


    <p>
        Please indicate all times that you <b>will be</b> available during the week.  This information is used by
        the hiring committee and professors to determine class coverage, lab coverage, office hour coverage, etc.
        (Note: Any work necessary on the weekends will be up to you and your professor to negotiate.)
    </p>
    <p>
        If your schedule changes, please come back and update this record.
    </p>

    <div id="canvas_div"></div>
    <button onclick="updateAvailability('@ViewBag.userid')" class="btn btn-primary">Update Availability</button>

    <!-- The spinner -->
    <button id="spinner" class="btn btn-primary" type="button" disabled>
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        <span class="sr-only">Loading...</span>
    </button>
</body>